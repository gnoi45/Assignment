<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one"
            style="@style/Keyboard_textview"
            android:text="1" />

        <TextView
            android:id="@+id/two"
            style="@style/Keyboard_textview"
            android:text="2" />

        <TextView
            android:id="@+id/three"
            style="@style/Keyboard_textview"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/four"
            style="@style/Keyboard_textview"
            android:text="4" />

        <TextView
            android:id="@+id/five"
            style="@style/Keyboard_textview"
            android:text="5" />

        <TextView
            android:id="@+id/six"
            style="@style/Keyboard_textview"
            android:text="6" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seven"
            style="@style/Keyboard_textview"
            android:text="7" />

        <TextView
            android:id="@+id/eight"
            style="@style/Keyboard_textview"
            android:text="8" />

        <TextView
            android:id="@+id/nine"
            style="@style/Keyboard_textview"
            android:text="9" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="33"
            android:src="@drawable/backspace" />

        <TextView
            android:id="@+id/zero"
            style="@style/Keyboard_textview"
            android:text="0" />

        <TextView
            android:id="@+id/dot"
            style="@style/Keyboard_textview"
            android:text="." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forwardchevron" />
    </LinearLayout>
</LinearLayout>